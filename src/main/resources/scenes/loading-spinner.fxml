<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<Pane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tv.rpi.m3u8.control.LoadingSpinner">
   <Label styleClass="oswald" text="Loading..." textAlignment="CENTER" wrapText="true">
      <font>
         <Font size="30.0"/>
      </font>
   </Label>
   <VBox alignment="CENTER">
      <padding>
         <Insets right="10"/>
      </padding>
      <ImageView fx:id="spinner">
         <Image url="@../images/hourglass.png" requestedWidth="40" requestedHeight="50"/>
      </ImageView>
   </VBox>
</Pane>
